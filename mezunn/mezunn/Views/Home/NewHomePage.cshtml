@model EntityLayer.Concrete.Register

@{
    Layout = null;
    var message = Request.QueryString["message"];
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>
    <title>Mezun Bilgi Sistemi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        h1 {
            margin: 0;
        }

        nav {
            background-color: #f2f2f2;
            padding: 10px;
            text-align: center;
        }

            nav a {
                margin: 10px;
                color: #333;
                text-decoration: none;
                font-weight: bold;
            }

        main {
            margin: 20px;
        }

        .hero {
            background-image: url("background.jpg");
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            text-align: center;
        }

            .hero h2 {
                font-size: 36px;
                margin: 0;
            }

            .hero p {
                font-size: 20px;
                margin-top: 10px;
            }

        .login-register {
            position: absolute;
            top: 20px;
            right: 20px;
        }

            .login-register a {
                margin: 10px;
                padding: 10px 20px;
                background-color: #333;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
            }

        footer {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        body {
            background-color: #9BABB8;
        }

        h1 {
            color: #fff;
            text-align: center;
        }

        .bx-wrapper {
            max-width: 800px !important
        }
        .avatar {
            position: absolute;
            top: -18px;
            left: 50px;
           
        }
            .avatar img {
                max-width: 40px !important
            }
    </style>
</head>
<body>
    <header>
        <h1>Mezun Bilgi Sistemi</h1>
    </header>

    <nav>
        <a href="/Home/Hakkımzıda">Hakkımızda</a>
        <a href="/Home/NewIsIlanları"> İş İlanları</a>
        
        <div> @Session["Kullanici"].ToString() - @message</div>

    </nav>
    <main>
        <head>
            <meta charset="utf-8">
            <title>Responsive jQuery Slider - bxSlider</title>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.5/jquery.bxslider.min.js"></script>
            <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.5/jquery.bxslider.css">
        </head>
        <h1> </h1>
        <ul class="bxslider">
            <li><img src="https://cdn.pixabay.com/photo/2016/11/19/16/52/dawn-1840298_1280.jpg" /></li>
            <li><img src="https://cdn.pixabay.com/photo/2017/09/02/11/04/adult-education-2706977_1280.jpg" /></li>
            <li><img src="https://cdn.pixabay.com/photo/2021/12/02/16/46/graduation-6840941_1280.png" /></li>
        </ul>
    </main>

    <main>
        <div class="hero">


        </div>


        <div class="login-register">


            <a>@Session["Kullanici"].ToString() </a>
            <a href="/Home/HomePage" class="btn btn-danger"> Çıkış yap</a>
            <div class="avatar">
                <img src="data:image/png;base64," alt="Avatar">
            </div>

        </div>
    </main>
    <script>
        $(document).ready(function () {
            $('.bxslider').bxSlider();
        });
    </script>

</body>
</html>


