<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kayıt Ol</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Views/Register/css/style.css">
    <style>
        /* CSS kodları buraya gelecek */
        body {
            background-color: #9BABB8;
        }

        .login-wrap {
            background: #f2f2f2;
            border-radius: 10px;
            overflow: hidden;
            padding: 50px;
            box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            max-width: 400px;
        }

            .login-wrap h3 {
                text-align: center;
                margin-bottom: 30px;
                font-weight: 500;
                font-size: 28px;
                color: #333;
            }

            .login-wrap .form-group {
                position: relative;
                margin-bottom: 25px;
            }

                .login-wrap .form-group label {
                    font-size: 14px;
                    font-weight: 500;
                    color: #333;
                }

                .login-wrap .form-group input {
                    width: 100%;
                    height: 40px;
                    border-radius: 25px;
                    padding: 0px 20px;
                    border: 1px solid #e6e6e6;
                    background: #f2f2f2;
                    font-size: 16px;
                    color: #666;
                    outline: none;
                }

                .login-wrap .form-group .form-control:focus {
                    border-color: #3ecf8e;
                    box-shadow: none;
                }

                .login-wrap .form-group .btn-primary {
                    width: 100%;
                    border-radius: 25px;
                    padding: 10px 30px;
                    color: #fff;
                    font-size: 15px;
                    font-weight: bold;
                    background-color: #3ecf8e;
                    border: none;
                    outline: none !important;
                    transition: all 0.4s;
                }

                    .login-wrap .form-group .btn-primary:hover {
                        background-color: #32be80;
                    }

                .login-wrap .form-group .btn-warning {
                    width: 100%;
                    border-radius: 25px;
                    padding: 10px 30px;
                    color: #fff;
                    font-size: 15px;
                    font-weight: bold;
                    background-color: #f89406;
                    border: none;
                    outline: none !important;
                    transition: all 0.4s;
                    margin-top: 15px;
                }

                    .login-wrap .form-group .btn-warning:hover {
                        background-color: #e2860b;
                    }
    </style>
</head>
<body>

    <header> </header>
    <div class="login-wrap">
        <h3>Yeni Hesap Oluştur</h3>
        <form method="post" onsubmit="return validateForm()">
            <div class="form-group mb-3">
                <label class="label">Name</label>
                <input type="text" class="form-control" name="registerName" placeholder="Name" required>

            </div>
            <div class="form-group mb-3">
                <label class="label">LastName</label>
                <input type="text" class="form-control" name="resigterLastName" placeholder="Surname" required>

            </div>
            <div class="form-group mb-3">
                <label class="label">Email Address</label>
                <input type="email" class="form-control" name="registerEmail" id="registerEmail" placeholder="Numara" required>
                <span class="text-danger" id="emailError"></span>

            </div>
            <div class="form-group mb-3">
                <label class="label">Password</label>
                <input id="password" type="password" class="form-control" name="registerPassword" placeholder="Password" required>

            </div>
            <div class="form-group mb-3">
                <label class="label">Rol(Kullanıcı:U , İşveren:E, Admin:A)</label>
                <input type="text" class="form-control" name="registerRoll" placeholder="Rolü" required>

            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
            </div>
            <div>
                <a href="/Login/LoginVerification" class="btn btn-danger">Zaten Bir hesaba sahibim</a>
            </div>
            <br />
            <div class="validation-summary">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

        </form>
        <div class="text-center">
            <p class="text-danger" id="validation-summary"></p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>

    <script nonce="4f7f3935-4b23-4009-a385-376d8825dec3">
        function validateForm() {
            var emailInput = document.getElementById("registerEmail");
            var emailError = document.getElementById("emailError");
           var emailPattern = /^[^\s]+[^\s]+\.[^\s]+$/;

            if (!emailPattern.test(emailInput.value)) {
                emailError.innerText = "Geçersiz e-posta adresi";
                emailInput.focus();
                return false;
            }

            emailError.innerText = "";
            return true;
        }
    </script>
</body>
</html>
